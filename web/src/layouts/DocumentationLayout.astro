---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "MetaSpec-Kyocera Documentation" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | MetaSpec-Kyocera</title>
    <style>
        /* Ensure markdown content is styled properly */
        .prose {
            max-width: none;
        }
        .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
            scroll-margin-top: 2rem;
        }
        .prose pre {
            overflow-x: auto;
        }
        .prose code {
            font-size: 0.875em;
        }
        .prose table {
            font-size: 0.875em;
        }

        /* Navigation styles */
        .nav-link {
            @apply block px-3 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors;
        }
        .nav-link.active {
            @apply text-blue-600 bg-blue-50;
        }
        .nav-section-title {
            @apply text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2 px-3;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="flex">
        <!-- Sidebar Navigation -->
        <nav class="w-64 bg-white shadow-sm border-r border-gray-200 min-h-screen fixed left-0 top-0 overflow-y-auto">
            <div class="p-6">
                <h1 class="text-xl font-bold text-gray-900 mb-6">
                    <a href="/docs/readme" class="hover:text-blue-600 transition-colors">
                        MetaSpec-Kyocera
                    </a>
                </h1>

                <!-- Overview Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Overview</div>
                    <a href="/docs/readme" class="nav-link">Project README</a>
                    <a href="/docs/agents" class="nav-link">LLM Instructions</a>
                </div>

                <!-- Planning Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Planning</div>
                    <a href="/docs/planning/system-planning" class="nav-link">System Planning</a>
                </div>

                <!-- Implementation Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Implementation</div>
                    <a href="/docs/implementation/phase-1-foundation" class="nav-link">Phase 1 Foundation</a>
                </div>

                <!-- Architecture Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Architecture</div>
                    <a href="/docs/architecture/web-interface-integration" class="nav-link">Web Interface</a>
                </div>

                <!-- User Guides Section -->
                <div class="mb-6">
                    <div class="nav-section-title">User Guides</div>
                    <a href="/docs/user-guides/getting-started" class="nav-link">Getting Started</a>
                </div>

                <!-- Development Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Development</div>
                    <a href="/docs/development/development-setup" class="nav-link">Development Setup</a>
                </div>

                <!-- API Reference Section -->
                <div class="mb-6">
                    <div class="nav-section-title">API Reference</div>
                    <a href="/docs/api/api-overview" class="nav-link">API Overview</a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="flex-1 ml-64">
            <div class="max-w-4xl mx-auto px-6 py-8">
                <article class="prose prose-gray max-w-none">
                    <slot />
                </article>
            </div>
        </main>
    </div>

    <script>
        // Highlight current page in navigation
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });

        // Add scroll-to-top functionality
        window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
                if (!document.getElementById('scroll-to-top')) {
                    const button = document.createElement('button');
                    button.id = 'scroll-to-top';
                    button.innerHTML = 'â†‘';
                    button.className = 'fixed bottom-4 right-4 bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700 transition-colors';
                    button.onclick = () => window.scrollTo({ top: 0, behavior: 'smooth' });
                    document.body.appendChild(button);
                }
            } else {
                const button = document.getElementById('scroll-to-top');
                if (button) button.remove();
            }
        });
    </script>
</body>
</html>