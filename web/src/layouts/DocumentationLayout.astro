---
import '../styles/globals.css';

export interface Props {
  title: string;
  description?: string;
}

const { title = "MetaSpec-Kyocera", description = "MetaSpec-Kyocera Documentation" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | MetaSpec-Kyocera</title>


    <!-- Inter font from Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- JetBrains Mono for code -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">

</head>
<body class="bg-background text-foreground min-h-screen antialiased">
    <div class="flex">
        <!-- Sidebar Navigation -->
        <nav class="w-64 bg-white shadow-sm border-r border-gray-200 min-h-screen fixed left-0 top-0 overflow-y-auto">
            <div class="p-6">
                <h1 class="text-xl font-bold text-foreground mb-6">
                    <a href="/MetaSpec-Kyocera/docs/readme/" class="hover:text-primary transition-colors">
                        MetaSpec-Kyocera
                    </a>
                </h1>

                <!-- Overview Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Overview</div>
                    <a href="/MetaSpec-Kyocera/docs/readme/" class="nav-link">Project README</a>
                    <a href="/MetaSpec-Kyocera/docs/agents/" class="nav-link">LLM Instructions</a>
                </div>

                <!-- Planning Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Planning</div>
                    <a href="/MetaSpec-Kyocera/docs/planning/SYSTEM_PLANNING/" class="nav-link">System Planning</a>
                </div>

                <!-- Implementation Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Implementation</div>
                    <a href="/MetaSpec-Kyocera/docs/implementation/PHASE_1_FOUNDATION/" class="nav-link">Phase 1 Foundation</a>
                </div>

                <!-- Architecture Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Architecture</div>
                    <a href="/MetaSpec-Kyocera/docs/architecture/WEB_INTERFACE_INTEGRATION/" class="nav-link">Web Interface</a>
                </div>

                <!-- User Guides Section -->
                <div class="mb-6">
                    <div class="nav-section-title">User Guides</div>
                    <a href="/MetaSpec-Kyocera/docs/user-guides/GETTING_STARTED/" class="nav-link">Getting Started</a>
                </div>

                <!-- Development Section -->
                <div class="mb-6">
                    <div class="nav-section-title">Development</div>
                    <a href="/MetaSpec-Kyocera/docs/development/DEVELOPMENT_SETUP/" class="nav-link">Development Setup</a>
                </div>

                <!-- API Reference Section -->
                <div class="mb-6">
                    <div class="nav-section-title">API Reference</div>
                    <a href="/MetaSpec-Kyocera/docs/api/API_OVERVIEW/" class="nav-link">API Overview</a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="flex-1 ml-64">
            <div class="max-w-4xl mx-auto px-6 py-8">
                <article class="prose prose-gray max-w-none">
                    <slot />
                </article>
            </div>
        </main>
    </div>

    <script>
        // Highlight current page in navigation - with GitHub Pages base path support
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                // Handle both relative and absolute paths for GitHub Pages
                if (href === currentPath || currentPath.endsWith(href) ||
                    (href.startsWith('/') && currentPath.includes(href.substring(1)))) {
                    link.classList.add('active');
                }
            });
        });

        // Enhanced scroll-to-top functionality with proper styling
        let scrollButton = null;
        window.addEventListener('scroll', function() {
            if (window.scrollY > 300) {
                if (!scrollButton) {
                    scrollButton = document.createElement('button');
                    scrollButton.id = 'scroll-to-top';
                    scrollButton.innerHTML = 'â†‘';
                    scrollButton.setAttribute('aria-label', 'Scroll to top');
                    scrollButton.onclick = () => window.scrollTo({ top: 0, behavior: 'smooth' });
                    document.body.appendChild(scrollButton);
                }
            } else {
                if (scrollButton) {
                    scrollButton.remove();
                    scrollButton = null;
                }
            }
        });
    </script>
</body>
</html>